{
  "name": "@zdr-tools/zdr-monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/index.js",
  "sideEffects": false,
  "types": "dist/src/index.d.ts",
  "bin": "./bin/zdr-monorepo.js",
  "type": "module",
  "files": [
    "dist",
    "bin"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "import": "./dist/src/index.js"
    }
  },
  "scripts": {
    "start": "tsc -w --incremental",
    "build": "rm -rf dist && tsc && tsc-esm-fix dist",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "pnpx eslint . --ext ts,js",
    "lint:fix": "pnpx eslint . --fix --ext ts,js"
  },
  "lint-staged": {
    "*.{js,ts}": "pnpm lint"
  },
  "dependencies": {
    "es-toolkit": "^1.38.0",
    "@babel/runtime": "^7.27.3",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "concurrently": "^9.1.2",
    "dependency-graph": "^1.0.0",
    "nanoid": "^5.1.5",
    "read-pkg": "^9.0.1",
    "ts-morph": "^25.0.1",
    "tslib": "^2.8.1",
    "wait-on": "^8.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.27",
    "@types/wait-on": "^5.3.4",
    "@vitest/coverage-v8": "^3.1.4",
    "@zdr-tools/eslint-config-zdr": "workspace:*",
    "@zdr-tools/typescript-config-common": "workspace:*",
    "tsc-esm-fix": "^3.1.2",
    "typescript": "~5.8.3",
    "vitest": "^3.1.4"
  }
