{
  "name": "@zdr-tools/zdr-native-tools",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "author": {
    "name": "talbenmoshe",
    "email": "tal.benm@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/talbenmoshe/zdr-tools/issues"
  },
  "homepage": "https://github.com/talbenmoshe/zdr-tools/tree/master/packages/zdr-native-tools#readme",
  "type": "module",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "sideEffects": false,
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./test": {
      "import": "./dist/src/testIndex.js",
      "require": "./dist/src/testIndex.js",
      "types": "./dist/src/testIndex.d.ts"
    }
  },
  "scripts": {
    "build": "rm -rf dist && tsc && tsc-esm-fix dist",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "pnpx eslint . --ext ts,js",
    "lint:fix": "pnpx eslint . --fix --ext ts,js"
  },
  "lint-staged": {
    "*.{js,ts}": "pnpm lint"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.3",
    "color-convert": "^3.1.0",
    "es-toolkit": "^1.38.0",
    "eventemitter3": "^5.0.1",
    "nanoid": "^5.1.5",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/color-convert": "^2.0.4",
    "tsc-esm-fix": "^3.1.2",
    "@zdr-tools/eslint-config-zdr": "workspace:*",
    "@zdr-tools/typescript-config-common": "workspace:*",
    "typescript": "~5.8.3",
    "vitest": "3.1.4"
  },
  "peerDependencies": {
    "eventemitter3": "^5.0.0"
  }
}
